<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta name="description" content="">
    <meta name="author" content="">

    <script src="https://code.jquery.com/jquery-3.6.0.js"
            integrity="sha256-H+K7U5CnXl1h5ywQfKtSj8PCmoN9aaq30gDh27Xc0jk=" crossorigin="anonymous"></script>


    <title>Login to CMS</title>
    <link rel="stylesheet" type="text/css" href="../../../../../css/login.css"/>
    <style>
        form {
            z-index: 20;
        }

        .modal-background {
            position: fixed;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            background-color: white;
            -moz-opacity: .5;
            filter: alpha(opacity=50);
            z-index: 0;
        }

        .modal-window {
            opacity: 0;
            background-color: white;
            border-radius: 10px;
            -webkit-border-radius: 10px;
            -moz-border-radius: 10px;
            box-shadow: 0 0 20px 0 #222;
            -webkit-box-shadow: 0 0 20px 0 #222;
            -moz-box-shadow: 0 0 20px 0 #222;
            height: 240px;
            left: 50%;
            margin: -120px 0 0 -160px;
            padding: 10px;
            position: fixed;
            top: 50%;
            width: 320px;
            z-index: 0;


            transition: all 1.3s ease;
        }

        .modal-background.active, .modal-window.active {
            z-index: 1000;
        }

        .modal-window.active {
            opacity: 1;

        }

        .modal-background.active {
            opacity: .70;
        }
    </style>

</head>

<body>
<div class="container">
    <form class="form-signin" action="/admin-login" method="post">
        <h2 class="form-signin-heading">Login to CMS</h2>
        <label>
            <input type="text" name="login" class="form-control" placeholder="Username">
        </label>
        <label>
            <input type="password" name="password" class="form-control" placeholder="Password">
        </label>
        <button class="login" type="submit">Login</button>
        <a href="/create/account" class="account"> Create an Account</a>
        <a href="#" class="btn">btn</a>

    </form>
    <div class="modal-background"></div>
    <div class="modal-window">{{ msg }}</div>

    <script>

        $(document).ready(function () {
            $(" .modal-background,.btn").click(function () {
                $(".modal-window, .modal-background").toggleClass("active");
            });
        });

        let msg = "{{ msg }}"
        let redirect = "{{ redirect }}"
        console.log(msg)
        if (msg !== '') {
            $(".modal-window, .modal-background").addClass("active");
        }
        if (msg !== '' && redirect === 'true') {

            window.setTimeout(function () {

                window.location.href = "/";

            }, 3000);
        }
    </script>
</div>
</body>
</html>